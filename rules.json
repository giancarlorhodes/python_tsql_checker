{
  "rules": [
    {
      "key": 1,
      "version": 1,
      "name": "Check Table Naming Convention",
      "description": "CREATE TABLE should follow the pattern [dbo].[tblkProducts] or [dbo].[tblProducts] where the table name is PascalCase and prefixed with 'tblk' or 'tbl'.",
      "pattern": "^CREATE\\s+TABLE\\s+\\[dbo\\]\\.\\[(tblk|tbl)[A-Z][a-zA-Z]*\\]",
      "related_to": null
    },
    {
      "key": 2,
      "version": 1,
      "name": "Check Database Name Convention",
      "description": "MDC databases will follow this pattern for naming.",
      "pattern": "^([cC][rR][eE][aA][tT][eE]\\s+[dD][aA][tT][aA][bB][aA][sS][eE])\\s+\\[[A-Z][a-z]*(?:[A-Z][a-z]*)*\\]$",
      "related_to": null
    },
    {
      "key": 3,
      "version": 2,
      "name": "Check Table Naming Convention v2",
      "description": "CREATE TABLE should follow the pattern [dbo].[tblkProducts] or [dbo].[tblProducts] where the table name is PascalCase and prefixed with 'tblk' or 'tbl'.",
      "pattern": "^([cC][rR][eE][aA][tT][eE]\\s+[tT][aA][bB][lL][eE])\\s+\\[dbo\\]\\.\\[(tblk|tbl)[A-Za-z]+(?:[A-Za-z]+)*\\].*$",
      "related_to": 1
    },
    {
      "key": 4,
      "version": 1,
      "name": "Column Naming Convention",
      "description": "Passing examples are [FirstName] [nvarchar](10) NOT NULL, [Title] [nvarchar](30) NULL",
      "pattern": "\\s*\\[([A-Z][a-z]+(?:[A-Z][a-z]+)*)\\]\\s+\\[[A-Za-z]+\\].*",
      "related_to": null
    },
    {
      "key": 5,
      "version": 1,
      "name": "Check View Naming Convention",
      "description": "VIEW [dbo].[vwOrderSubtotals] or CREATE VIEW [dbo].[vwOrderSubtotals]",
      "pattern": "(?:CREATE\\s+OR\\s+ALTER|CREATE|ALTER)?\\s*VIEW\\s+\\[dbo\\]\\.\\[vw[A-Z][a-zA-Z]+\\]",
      "related_to": null
    },
    {
      "key": 6,
      "version": 2,
      "name": "Check View Naming Convention v2",
      "description": "VIEW [dbo].[vwOrderSubtotals] or CREATE VIEW [dbo].[vwOrderSubtotals]",
      "pattern": "(?:[cC][rR][eE][aA][tT][eE](?:\\s+[oO][rR]\\s+[aA][lL][tT][eE][rR])?|[aA][lL][tT][eE][rR])?\\s*[vV][iI][eE][wW]\\s+\\[dbo\\]\\.\\[vw[A-Z][a-zA-Z]+\\]",
      "related_to": 5
    },    
    {
      "key": 7,
      "version": 1,
      "name": "Check Procedure Naming Convention",
      "description": "CREATE procEdure [dbo].[uspCustOrderHist] matches",
      "pattern": "(?:[cC][rR][eE][aA][tT][eE](?:\\s+[oO][rR]\\s+[aA][lL][tT][eE][rR])?|[aA][lL][tT][eE][rR])?\\s*[pP][rR][oO][cC][eE][dD][uU][rR][eE]\\s+\\[dbo\\]\\.\\[usp[A-Z][a-zA-Z]+\\]",
      "related_to": null
    }
    
  ]
}
